<%= link_to "Nova Lista", new_todo_list_path, class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 mb-4 inline-block" %>

<ul class="space-y-4">
  <% @todo_lists.each do |list| %>
    <li class="bg-white p-4 rounded shadow">
      <h2 class="text-xl font-semibold">
        <%= list.title %> 
        <span class="text-sm text-gray-500">(<%= pluralize(list.todo_items.count, 'tarefa') %>)</span>
      </h2>
      <div class="mt-2">
        <%= link_to "Ver", todo_list_path(list), class: "text-blue-600 hover:underline" %> |
        <%= link_to "Editar", edit_todo_list_path(list), class: "text-yellow-600 hover:underline" %> |
        <%= button_to "Apagar", todo_list_path(list), method: :delete, data: { confirm: "Tem certeza?" }, class: "text-red-600" %>
      </div>
    </li>
  <% end %>
</ul>