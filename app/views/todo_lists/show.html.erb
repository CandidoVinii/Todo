<h1 class="text-3xl font-bold mb-4"><%= @todo_list.title %></h1>

<h2 class="text-xl font-semibold mb-2">Tarefas</h2>
<ul class="space-y-2">
  <% @todo_list.todos_item.each do |todo_item| %>
    <li class="bg-white p-4 rounded shadow flex justify-between items-center">
      <span><%= todos_item.content %> - <%= todos_item.done ? "âœ”ï¸" : "âŒ" %></span>
      <div class="space-x-2">
        <%= link_to "Editar", edit_todo_list_todo_path(@todo_list, todo), class: "text-yellow-600 hover:underline" %>
        <%= link_to "Apagar", todo_list_todo_path(@todo_list, todo), method: :delete, data: { confirm: "Apagar essa tarefa?" }, class: "text-red-600 hover:underline" %>
      </div>
    </li>
  <% end %>
</ul>

<div class="mt-6">
  <%= link_to "Nova Tarefa", new_todo_list_todo_path(@todo_list), class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
</div>

<div class="mt-4">
  <%= link_to "Voltar para as Listas", todo_lists_path, class: "text-blue-600 hover:underline" %>
</div>
