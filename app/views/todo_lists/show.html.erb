<h1 class="text-3xl font-bold mb-4"><%= @todo_list.title %></h1>

<h2 class="text-xl font-semibold mb-2">Tasks</h2>
<ul class="space-y-2">
  <% @todo_list.todo_items.each do |todo_item| %>
    <li class="bg-white p-4 rounded shadow flex justify-between items-center">
      <span><%= todo_item.content %> - <%= todo_item.done ? "✅" : "❌" %></span>
      <div class="space-x-2">
        <%= link_to "Edit", edit_todo_list_todo_item_path(@todo_list, todo_item), class: "text-yellow-600 hover:underline" %>
        <% if !todo_item.done %>
          <%= button_to "Done", todo_list_todo_item_path(@todo_list, todo_item), method: :patch, params: { todo_item: { done: true } }, data: { confirm: "Done this task?" }, class: "text-blue-600 hover:underline" %>
        <% end %>        
        <%= button_to "Delete", todo_list_todo_item_path(@todo_list, todo_item), method: :delete, data: { confirm: "Delete this task?" }, class: "text-red-600 hover:underline" %>
      </div>
    </li>
  <% end %>
</ul>

<div class="mt-6">
  <%= link_to "New Task", new_todo_list_todo_item_path(@todo_list), class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
</div>

<div clasmt-4">
  <%= link_to "Go back To-Do list", todo_lists_path, class: "text-blue-600 hover:underline" %>
</div>
